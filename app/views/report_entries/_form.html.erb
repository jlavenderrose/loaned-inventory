<%= semantic_form_for @report_entry do |f| %>
  <%= f.inputs do %>
    <%= f.input :administrator_id, :as => :hidden %>
    <% if @report_entry.inventory_object_id then %>
      <%= f.input :inventory_object_id, :as => :hidden %>
    <% else %>
      <%= f.input :inventory_object_name %>
    <% end %>
    <%= f.input :body, :input_html => { :class => 'autogrow', :rows => 5, :cols => 25 }%>
    <%= f.input :open_issue %>
  <% end %>
  <%= f.actions %>
<% end %>
