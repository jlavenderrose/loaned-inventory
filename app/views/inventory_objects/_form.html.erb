<%= form_for @inventory_object, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :id1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :id1, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :id2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :id2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :id3, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :id3, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                inventory_objects_path, :class => 'btn' %>
  </div>
<% end %>
