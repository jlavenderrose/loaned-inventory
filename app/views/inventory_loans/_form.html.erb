<%= form_for @inventory_loan, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :loaned_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :loaned_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :returned_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :returned_date, :class => 'date_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                inventory_loans_path, :class => 'btn' %>
  </div>
<% end %>
