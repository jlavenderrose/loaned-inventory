<%- model_class = InventoryLoan -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>Loanee</th>
      <th>Inventory Object</th>
      <th><%= model_class.human_attribute_name(:loaned_date) %></th>
      <th><%= model_class.human_attribute_name(:returned_date) %></th>
      <th></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @inventory_loans.each do |inventory_loan| %>
      <tr>
        <td><%= link_to inventory_loan.id, inventory_loan_path(inventory_loan) %></td>
        <td><%= link_to inventory_loan.loanee.fullname, inventory_loan.loanee %></td>
        <td><%= link_to inventory_loan.inventory_object.id1, inventory_loan.inventory_object %></td>
        <td><%= inventory_loan.loaned_date %></td>
        <td><%= inventory_loan.returned_date %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_inventory_loan_path(inventory_loan), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_inventory_loan_path,
            :class => 'btn btn-primary' %>
