<%- model_class = InventoryLoan -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:loaned_date) %>:</strong></dt>
  <dd><%= @inventory_loan.loaned_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:returned_date) %>:</strong></dt>
  <dd><%= @inventory_loan.returned_date || "Not returned" %></dd>
  <dt>Loanee</dt>
  <dd><%= link_to @inventory_loan.loanee_name, @inventory_loan.loanee %></dd>
  <dt>Inventory Object</dt>
  <dd><%= link_to @inventory_loan.inventory_object.id1, @inventory_loan.inventory_object %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              inventory_loans_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_inventory_loan_path(@inventory_loan), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              inventory_loan_path(@inventory_loan),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
